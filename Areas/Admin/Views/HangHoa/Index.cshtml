@model IEnumerable<DoAn.Data.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
}

<p>
    <a asp-action="Create">Tạo mới</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.Loai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenHangHoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiamGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChiTiet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>

            @*<th>
            @Html.DisplayNameFor(model => model.DiemReview)
        </th>*@

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Loai.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenHangHoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiamGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <img src="~/Hinh/HangHoa/@item.Hinh" height="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChiTiet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>

            @*<td>
            @Html.DisplayFor(modelItem => item.DiemReview)
        </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaHangHoa" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@item.MaHangHoa" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.MaHangHoa" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
