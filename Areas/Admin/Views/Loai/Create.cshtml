@model DoAn.Data.Loai
@using DoAn.ViewModels

@{
    ViewData["Title"] = "Thêm Mới Loại";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenLoai" class="control-label"></label>
                <input asp-for="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaLoaiCha" class="control-label"></label>
                @*<select asp-for="MaLoaiCha" class="form-control" asp-items="@ViewBag.LoaiCha">
                        <option value="">---------Chọn------------</option>
                    </select>*@
                @await Html.PartialAsync("LoaiDropDown", ViewBag.LoaiCha as LoaiDropDown)
                <span asp-validation-for="MaLoaiCha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
